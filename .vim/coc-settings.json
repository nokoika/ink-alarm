{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp",
        "--debug"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "settings": {
        "haskell": {
          "checkParents": "CheckOnSave",
          "checkProject": true,
          "maxCompletions": 40,
          "formattingProvider": "ormolu",
          "plugin": {
            "stan": {
              "globalOn": true
            }
          },
          "semanticTokens": true
        }
      }
    }
  },
  "hover.floatConfig": {
    "focusable": true
  },
  "codeLens.enable": true,
  "inlayHint.display": true,
  "inlayHint.enableParameter": true,
  "inlayHint.enable": true
}
